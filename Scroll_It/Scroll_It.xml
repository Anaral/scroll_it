	<Script file="Scroll_It.lua" />
	<Frame name="ChatFrameScrollBoxTemplate" movable="true" enableMouse="true" setAllPoints="true" virtual="true">
        <Scripts>
			<OnLoad>
				self:SetFrameLevel(self:GetParent():GetFrameLevel());
			</OnLoad>
			<OnMouseWheel>
				ChatFrame_OnMouseWheel(self:GetParent(), arg1);
			</OnMouseWheel>
        </Scripts>
    </Frame>
	<Frame name="$parentScrollBox" inherits="ChatFrameScrollBoxTemplate" parent="ChatFrame1" />
